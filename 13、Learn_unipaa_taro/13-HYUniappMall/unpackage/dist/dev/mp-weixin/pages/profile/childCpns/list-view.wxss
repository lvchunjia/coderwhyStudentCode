/* 水平间距 */
.list-view {
  background-color: white;
}
.list-view .item {
  height: 88rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  align-items: center;
  font-size: 15px;
  color: #333;
}
.list-view .item .item-img {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.list-view .item .info {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  border-bottom: 1rpx solid #f2f2f2;
}