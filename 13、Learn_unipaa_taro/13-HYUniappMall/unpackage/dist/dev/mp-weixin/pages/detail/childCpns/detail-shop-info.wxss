/* 水平间距 */
.detail-shop-info {
  padding: 50rpx 16rpx;
  border-bottom: 10rpx solid #f2f5f8;
  background-color: white;
}
.shop-top {
  line-height: 90rpx;
  /* 让元素垂直中心对齐 */
  display: flex;
  align-items: center;
}
.shop-top .top-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}
.shop-top .title {
  margin-left: 20rpx;
  vertical-align: center;
}
.shop-middle {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.shop-middle-item {
  flex: 1;
}
.shop-middle-left {
  display: flex;
  justify-content: space-evenly;
  color: #333;
  text-align: center;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
}
.sells-count, .goods-count {
  font-size: 36rpx;
}
.sells-text, .goods-text {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.shop-middle-right {
  font-size: 26rpx;
  color: #333;
}
.shop-middle-right .mid-item {
  width: 240rpx;
  margin-left: 60rpx;
}
.shop-middle-right .mid-item .name, .shop-middle-right .mid-item .score, .shop-middle-right .mid-item .better {
  display: inline-block;
  padding: 10rpx 8rpx;
}
.shop-middle-right .score {
  color: #5ea732;
  width: 52rpx;
}
.shop-middle-right .score-better {
  color: #f13e3a;
}
.shop-middle-right .better text {
  background-color: #5ea732;
  color: #fff;
  text-align: center;
}
.shop-middle-right .better-more text {
  background-color: #f13e3a;
}
.shop-bottom {
  text-align: center;
  margin-top: 20rpx;
}
.enter-shop {
  display: inline-block;
  font-size: 28rpx;
  background-color: #f2f5f8;
  width: 300rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 20rpx;
}